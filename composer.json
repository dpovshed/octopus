{
  "prefer-stable": true,
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/swt83/php-yaml.git"
    }
  ],
  "require": {
    "react/react": "^0.4",
    "travis/yaml": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Octopus\\": "src/"
    }
  },
  "scripts": {
    "phpcs": [
      "./vendor/bin/php-cs-fixer fix -v --dry-run --using-cache=no src"
    ],
    "phpcs-fix": [
      "./vendor/bin/php-cs-fixer fix -v --using-cache=no src"
    ]
  }
}
